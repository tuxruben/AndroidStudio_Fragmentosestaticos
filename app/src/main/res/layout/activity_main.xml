<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.lenovo.fragmentosestaticos.Fragmento1"
        android:layout_width="162dp"
        android:layout_height="174dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="103dp"
        tools:layout="@layout/fragment_fragmento1" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.lenovo.fragmentosestaticos.Fragmento2"
        android:layout_width="169dp"
        android:layout_height="171dp"
        android:layout_alignBottom="@+id/fragment"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        tools:layout="@layout/fragment_fragmento2" />

    <fragment
        android:id="@+id/fragment4"
        android:name="com.example.lenovo.fragmentosestaticos.Fragmento3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        tools:layout="@layout/fragment_fragmento3" />

</RelativeLayout>